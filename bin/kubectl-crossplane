#!/usr/bin/env bash

set -e

function usage {
  echo "Usage: kubectl crossplane [-h|--help] [COMMAND]... [OPTION]... [ARGUMENT]..." >&2
  echo "" >&2
  echo "Commands:" >&2
  echo "  stack" >&2
  echo "  trace" >&2
  echo "" >&2
  echo "-h, --help: Print usage" >&2
  echo "" >&2
}

function check_help {
  if [ "${1}" == "-h" -o "${1}" == "--help" ] ; then
    usage
    exit 1
  fi
}

check_help "${1}"

if [[ $# -gt 0 ]] ; then
  echo "Unknown command: $1" >&2
fi

usage
exit 1
